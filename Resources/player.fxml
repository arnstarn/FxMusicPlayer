                              </Group>
                              <Group>
                                 <children>
                                    <Text id="aritis" fx:id="artist" layoutX="52.0" layoutY="76.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="150.0" />
                                    <Label layoutX="14.0" layoutY="63.0" text="Artist: " />
