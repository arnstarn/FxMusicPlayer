   <children>
      <HBox stylesheets="@player.css">
         <children>
            <Button fx:id="prev" minWidth="-Infinity" mnemonicParsing="false" prefHeight="50.0" prefWidth="75.0" stylesheets="@player.css" text="l&lt;" textAlignment="CENTER" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <Button id="play_button" fx:id="play" minWidth="-Infinity" mnemonicParsing="false" prefHeight="50.0" prefWidth="75.0" text="&gt;" textAlignment="CENTER" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="stop" minWidth="-Infinity" mnemonicParsing="false" prefHeight="50.0" prefWidth="75.0" text="â–¡" textAlignment="CENTER" HBox.hgrow="ALWAYS">
