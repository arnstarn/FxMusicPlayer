                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="next" minWidth="-Infinity" mnemonicParsing="false" prefHeight="50.0" prefWidth="75.0" text="&gt;l" textAlignment="CENTER" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="dir" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="Change Directory" />
         </children>
      </HBox>
      <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
         <items>
            <ListView fx:id="list" prefHeight="200.0" prefWidth="200.0" />
            <Pane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Group>
                     <children>
                        <Group layoutX="1.0" layoutY="29.0">
                           <children>
                              <Group>
                                 <children>
                                    <Text id="title" fx:id="title" layoutX="52.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="150.0" />
