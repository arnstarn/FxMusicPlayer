                              </Group>
                           </children>
                        </Group>
                        <Group>
                           <children>
                              <Label layoutX="14.0" layoutY="116.0" text="Path: " />
                              <TextField id="path" fx:id="path" layoutX="14.0" layoutY="138.0" prefHeight="42.0" prefWidth="191.0" />
                           </children>
                        </Group>
                     </children>
                  </Group>
                  <TextField fx:id="search" layoutX="28.0" layoutY="24.0" onMouseClicked="#clearSearch" text="Search..." />
               </children>
            </Pane>
         </items>
      </SplitPane>
   </children>
